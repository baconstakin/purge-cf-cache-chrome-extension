{
  "manifest_version": 2,
  "name": "CloudFlare Purge Plugin",
  "short_name": "CloudFlare Purge",
  "description": "This extension can purge the CloudFlare cache for the current page of your CloudFlare enabled website",
  "version": "1.5.0",
  "options_ui": { 
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": { "19": "icon.png",
            "48": "icon48.png" 
  },
  "browser_action": {
   "browser_style": false,
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "storage",
   "http://*/",
   "https://*/"
   ],
   "applications": {
    "gecko": {
      "id": "{0a40b0aa-001b-41c9-a3d7-7f4c4fe77025}",
      "strict_min_version": "53.0"
    }
  } 
}